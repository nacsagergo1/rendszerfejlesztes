            ];
            foeletek.forEach(item => {
            %>
                <div class="menu-item">
                    <img src="<%= item.imagePath %>" alt="<%= item.name %>">
                    <div>
                        <h5><%= item.name %></h5>
                        <p><%= item.description %></p>
                    </div>
                    <% if (user && user.role === 'admin') { %>
                        <!-- Backend: Implement delete functionality here -->
                        <span class="delete-btn" onclick="removeItem(this)">Törlés</span>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Tészták -->
        <div class="col-md-6">
            <h3 class="mt-4">Tészták</h3>
            <%
            const tesztak = [
