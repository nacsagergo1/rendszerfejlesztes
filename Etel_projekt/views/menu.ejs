<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Menü</title>
    <link rel="icon" href="/img/icon.png" />
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .menu-item {
            display: flex;
            flex-direction: row;
            align-items: center;
            margin-bottom: 20px;
        }
        .menu-item img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
            margin-right: 20px;
        }
        .menu-item h5 {
            margin: 0;
        }
        .delete-btn {
            margin-left: auto;
            color: red;
            cursor: pointer;
        }
    </style>
</head>
<body>
<div id="nav" class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container">
        <a href="/" id="home" class="navbar-brand">A nagyi étterme</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul id="navigation" class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/menu" class="nav-link">Étlap</a>
                </li>
                <li class="nav-item">
                    <a href="/reserve" class="nav-link">Foglalás</a>
                </li>
                <li class="nav-item">
                    <a href="/reviews" class="nav-link">Vélemények</a>
                </li>
                <li class="nav-item">
                    <a href="/contact" class="nav-link">Kapcsolat</a>
                    <% if (typeof user === 'undefined') { %>
                <li class="nav-item">
                    <a href="/login" class="nav-link">Bejelentkezés</a>
                </li>
                <% } else if (user.role === 'admin'){ %>
                    <li class="nav-item">
                        <a href="/profile" class="nav-link">Profil</a>
                    </li>
                    <li>
                        <a href="/usersAdmin" class="nav-link">Felhasználók kezelése</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Kijelentkezés</a>
                    </li>
                <%} else { %>
                    <li class="nav-item">
                        <a href="/profile" class="nav-link">Profil</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Kijelentkezés</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</div>

<div id="menu-container" class="container mt-5 pt-5">
    <h1 class="text-center mt-5 pt-5">Menü</h1>
    <div class="row">
        <!-- Levesek -->
        <div class="col-md-6">
            <h3 class="mt-4">Levesek</h3>
            <%
            const levesek = [
                { name: 'Halászlé', description: 'Hagyományos magyar halleves', imagePath: '/img/Food_pics/1.jpg' },
                { name: 'Lencseleves', description: 'Ízletes lencseleves', imagePath: '/img/Food_pics/2.jpg' },
                { name: 'Bableves', description: 'Hagyományos magyar bableves', imagePath: '/img/Food_pics/3.jpg' },
                { name: 'Újházi tyúkhúsleves', description: 'Gazdag tyúkhúsleves', imagePath: '/img/Food_pics/4.jpg' }
            ];
            levesek.forEach(item => {
            %>
                <div class="menu-item">
                    <img src="<%= item.imagePath %>" alt="<%= item.name %>">
                    <div>
                        <h5><%= item.name %></h5>
                        <p><%= item.description %></p>
                    </div>
                    <% if (user && user.role === 'admin') { %>
                        <!-- Backend: Implement delete functionality here -->
                        <span class="delete-btn" onclick="removeItem(this)">Törlés</span>
                    <% } %>
                </div>
            <% }) %>
        </div>

        <!-- Főételek -->
        <div class="col-md-6">
            <h3 class="mt-4">Főételek</h3>
            <%
            const foeletek = [
                { name: 'Marhapörkölt galuskával', description: 'Hagyományos magyar étel friss galuskával', imagePath: '/img/Food_pics/0.jpg' },
