                { name: 'Rakott tészta', description: 'Ízletes rakott tészta', imagePath: '/img/Food_pics/6.jpg' },
                { name: 'Spaghetti Bolognese', description: 'Olasz tészta bolognai mártással', imagePath: '/img/Food_pics/7.jpg' },
                { name: 'Rakott tészta kettő', description: 'Másik változat rakott tésztából', imagePath: '/img/Food_pics/8.jpg' },
                { name: 'Diós tészta', description: 'Édes tészta darált dióval', imagePath: '/img/Food_pics/9.jpg' }
            ];
            tesztak.forEach(item => {
            %>
                <div class="menu-item">
                    <img src="<%= item.imagePath %>" alt="<%= item.name %>">
                    <div>
                        <h5><%= item.name %></h5>
                        <p><%= item.description %></p>
                    </div>
                    <% if (user && user.role === 'admin') { %>
                        <!-- Backend: Implement delete functionality here -->
                        <span class="delete-btn" onclick="removeItem(this)">Törlés</span>
                    <% } %>
                </div>
            <% }) %>
        </div>

        <!-- Italok -->
        <div class="col-md-6">
            <h3 class="mt-4">Italok</h3>
            <%
            const italok = [
                { name: 'Szóda', description: 'Frissítő szóda', imagePath: '/img/Food_pics/19.jpg' },
                { name: 'Unicum', description: 'Hagyományos magyar gyógynövénylikőr', imagePath: '/img/Food_pics/20.jpg' }
            ];
            italok.forEach(item => {
            %>
            <div class="menu-item">
                <img src="<%= item.imagePath %>" alt="<%= item.name %>">
                <div>
                    <h5><%= item.name %></h5>
                    <p><%= item.description %></p>
                </div>
                <% if (user && user.role === 'admin') { %>
