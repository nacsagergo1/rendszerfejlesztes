        <!-- Egyéb -->
        <div class="col-md-6">
            <h3 class="mt-4">Egyéb</h3>
            <%
            const egyebek = [
                { name: 'Narancs', description: 'Friss, édes narancs', imagePath: '/img/Food_pics/26.jpg' },
                { name: 'Házi almás rétes', description: 'Friss, házi készítésű rétes fahéjas almával töltve', imagePath: '/img/Food_pics/13.jpg' },
                { name: 'Csokoládé mousse', description: 'Könnyű csokoládés desszert, friss eperrel díszítve', imagePath: '/img/Food_pics/14.jpg' }
            ];
            egyebek.forEach(item => {
            %>
                <div class="menu-item">
                    <img src="<%= item.imagePath %>" alt="<%= item.name %>">
                    <div>
                        <h5><%= item.name %></h5>
                        <p><%= item.description %></p>
                    </div>
                    <% if (user && user.role === 'admin') { %>
                        <!-- Backend: Implement delete functionality here -->
                        <span class="delete-btn" onclick="removeItem(this)">Törlés</span>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    function removeItem(element) {
        element.parentElement.remove();
