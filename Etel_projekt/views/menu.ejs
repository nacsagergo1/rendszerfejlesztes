            %>
                <div class="menu-item">
                    <img src="<%= item.Image_path %>" alt="<%= item.Name %>">
                    <div>
                        <h5><%= item.Name %></h5>
                        <p><%= item.Description %></p>
                        <p><%= item.Price %> Ft</p>
                    </div>
                    <% if (user && user.role === 'admin') { %>
                        <!-- Backend: Implement delete functionality here -->
                        <span class="delete-btn" data-id="<%= item.ID %>" onclick="removeItem(this)">Törlés</span>
                    <% } %>
